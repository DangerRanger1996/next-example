{
    "extends": "airbnb",
    "rules": {
        "import/extensions": "off",
        "import/no-unresolved": "off",
        "react/jsx-filename-extension": [
          1,
          {
            "extensions": [
              ".js",
              ".jsx",
              ".tsx"
            ]
          }
        ],
        "jsx-a11y/anchor-is-valid": [
          "error",
          {
            "components": [
              "Link"
            ],
            "specialLink": [
              "to"
            ]
          }
        ]
    }
}